generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  name       String
  role       Role      @default(CLIENT)
  business   Business? @relation(fields: [businessId], references: [id]) // empleado o cliente
  businessId String?

  ownedBusinesses Business[] @relation("Owner")

  appointments Appointment[]
  createdAt    DateTime      @default(now())
}

model Business {
  id      String @id @default(uuid())
  name    String
  owner   User   @relation("Owner", fields: [ownerId], references: [id])
  ownerId String

  employees    User[] // empleados o clientes que trabajan en este negocio
  appointments Appointment[]
  createdAt    DateTime      @default(now())
}

model Appointment {
  id          String   @id @default(uuid())
  date        DateTime
  durationMin Int
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  business    Business @relation(fields: [businessId], references: [id])
  businessId  String
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  EMPLOYEE
  CLIENT
}
